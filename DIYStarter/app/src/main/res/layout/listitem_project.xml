<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/listitem_padding">

    <ImageView
        android:id="@+id/listitem_project_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/listitem_project_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:textSize="@dimen/listitem_project_title_text_size"
        android:layout_marginLeft="@dimen/listitem_project_title_side"
        android:layout_marginTop="@dimen/listitem_project_title_top"
        android:layout_marginRight="@dimen/listitem_project_title_side"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        />

</RelativeLayout>